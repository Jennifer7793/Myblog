<%= link_to 'Sign out', destroy_user_session_path, method: 'delete', class:"my-2 d-flex flex-row-reverse" %>
<div class="container-fluid p-5 bg-info text-white text-center">
  <h1><%= @blog.title %></h1>
  <p>Feel free to read and take away thoughts</p>
  <%= link_to 'Back to blogs', blogs_path, class:'text-warning' %><br>
  <% if can_edit?(@blog.id) == true %>
  <%= link_to 'Write a new article', new_blog_article_path, class:'text-warning' %>
  <% end %>
</div>
  
<div class="container mt-5">
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-sm-4 bg-light my-2 card">
      <h3><%= article.title %></h3>
      <p><%= article.content %></p>
      <% if can_edit?(@blog.id) == true %>
      <p><%= link_to 'Edit', edit_article_path(article), class:'text-info' %></p>
      <p><%= link_to 'Delete', article_path(article), class:'text-danger', method: 'delete', data: { confirm: 'Sure to delete article?' } %></p>
      <% end %>
    </div>
    <% end %>
  </div>
</div>