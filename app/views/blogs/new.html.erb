<div class="container-fluid p-5 bg-primary text-white text-center">
  <h1>Create a new blog</h1>
  <p><%= link_to 'Back to Myblog list', blogs_path, class:'text-warning' %></p>
</div>

<%= form_for(@blog) do |f| %>
<div class="container mt-3">
  <h2>Let us know what is the blog about</h2>
  <p>Enter your name, title and content</p>
    <div class="mb-3">
      <%= f.label :author %>
      <%= f.text_field :author, class:"form-control mt-3", placeholder:"I'm..." %>
    </div>
    <div class="mb-3 mt-3">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control mt-3", placeholder:"Myblog" %>
    </div>
    <div class="mb-3">
      <%= f.label :content %>
      <%= f.text_area :content, class:"form-control mt-3", placeholder:"It's all about Myblog...." %>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  <% end %>
</div>