<%= link_to 'Sign out', destroy_user_session_path, method: 'delete', class:"my-2 d-flex flex-row-reverse" %>
<div class="p-5 bg-primary text-white text-center">
  <h1>Myblog</h1>
  <p>To choose from below blogs and to see more</p>
</div>

<div class="container mt-5">
  <%= link_to 'Create new blog', new_blog_path, class:'btn btn-primary' %>
  <div class="row">
  <% @blogs.each do |blog| %>
    <div class="col-sm-4 bg-light my-2 card">
      <h3><%= blog.title %></h3>
      <p>By: <%= blog.author %></p>
      <p><%= blog.content %></p>
      <p><%= link_to 'Blog details', blog_path(blog.id), class:'btn btn-outline-info' %></p>
      <% if can_edit?(blog.id) == true %>
      <p><%= link_to 'Edit blog', edit_blog_path(blog), class:'text-info' %></p>
      <p><%= link_to 'Delete blog', blog_path(blog), class:'text-danger', method: 'delete', data: { confirm: 'Sure to delete blog?' } %></p>  
      <% end %> 
    </div>
    <% end %>
  </div>
</div>
