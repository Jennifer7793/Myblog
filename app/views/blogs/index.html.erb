<div class="container-fluid p-5 bg-primary text-white text-center">
  <h1>Myblog</h1>
  <p>To choose from below blogs and to see more</p>
  <%= link_to 'Create new blog', new_blog_path, class:'text-warning' %>
</div>
  
<div class="container mt-5">
  <div class="row">
    <div class="col-sm-4"><% @blogs.each do |blog| %>
      <h3>Title: <%= blog.title %></h3>
      <p>Author: <%= blog.author %></p>
      <p>Content: <%= blog.content %></p>
      <p><%= link_to 'Blog details', blog_path(blog.id), class:'text-warning' %></p>
      <p><%= link_to 'Edit blog', edit_blog_path(blog) %></p>
      <p><%= link_to 'Delete blog', blog_path(blog), method: 'delete', data: { confirm: 'Sure to delete blog?' } %></p>
    </div>
    <% end %>
  </div>
</div>
