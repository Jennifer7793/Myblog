<%= link_to 'Sign out', destroy_user_session_path, method: 'delete', class:"my-2 d-flex flex-row-reverse" %>
<div class="container-fluid p-5 bg-primary text-white text-center">
  <h1><%= @blog.title %></h1>
  <p><%= link_to 'Back to Myblog list', blogs_path, class:'text-warning' %></p>
  <p><%= link_to 'See all articles', blog_articles_path(@blog.id), class:'text-warning' %></p>
</div>
<div>
<% if can_edit?(@blog.id) == true %>
  <p>Invite your friend to own this blog together</p>
  <%= form_tag blog_path, method: "get" do %>
  <%= text_field_tag :search, params[:search], placeholder: 'please enter e-mail', class: 'form-controller' %>
  <%= submit_tag "search", name: nil, class:'btn btn-info' %>
  <% end %>
  <%= render 'shared/search_result' %>
<% end %>
</div>

<div class="container p-5 my-5 bg-lightgrey text-white">
  <h2><%= @blog.title %></h2>
  <p><%= @blog.author %></p>
  <p><%= @blog.content %></p>
</div>